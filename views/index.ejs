<%- include('partials/head') %>
<body>
  <div class="container show" id="login-holder">
    <h1>Weatherworld</h1>

    <form id="login" action="/login" method="POST">
      <label for="username">Username</label>
      <input name="name" type="text" id="username" maxlength="15" required>
      <label for="password">Password</label>
      <input name="pass" type="password" id="password" minlength="5" maxlength="30" required>
      <label for="room">Choose gameroom:</label>
      <select id="room" required>
        <% rooms.forEach(room => { %>
          <option value="<%= room.name %>"><%= room.name %> | <%= room.users %> users online</option>
        <% }) %>
      </select>
      <input type="submit" value="Log in">
    </form>
    <div id="feedback">
    </div>
    <a href="/register">No account yet? Sign up</a>

  </div>
  <ul id="scoreboard">

  </ul>
  <div id="map">
    <div id="cursor">
    </div>
  </div>
  <script type="text/javascript" src="/socket.io/socket.io.js"></script>

  <script type="module" src="/js/index.js">
  </script>

</body>
<%- include('partials/foot') %>
